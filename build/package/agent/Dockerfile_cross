FROM minio/mc as minio_client

FROM mysql

COPY --from=minio_client /usr/bin/mc /usr/bin/mc

RUN mkdir -p /opt/vxbinaries

# Entrypoint script
COPY _tmp/startup.sh /opt/vxbinaries/
COPY _tmp/version /opt/vxbinaries/

COPY _tmp/windows /opt/vxbinaries/windows
COPY _tmp/linux   /opt/vxbinaries/linux
COPY _tmp/darwin  /opt/vxbinaries/darwin

WORKDIR /opt/vxbinaries

RUN chmod +x /opt/vxbinaries/startup.sh

ENTRYPOINT ["/opt/vxbinaries/startup.sh"]
